#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

#define LYR 1

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            display-name = "Base";
            // ----------------------------------------------------------------------------------------------------------------------------------------------------
            //  | C_PP    | ESC     | 1       | 2       | 3       | 4       | 5       |       | 6       | 7       | 8       | 9       | 0       | -       | =       | BSPC    |
            //            | TAB     | Q       | W       | E       | R       | T       |       | Y       | U       | I       | O       | P       | [       | ]       | \       |
            //            | CAPS    | A       | S       | D       | F       | G       |       | H       | J       | K       | L       | ;       | '       |       ENTER       |
            //            | LSHFT   | Z       | X       | C       | V       | B       |       | B       | N       | M       | ,       | .       | /       | UP      | RSHFT   |
            //            | LCTRL   | WIN     | ALT     | LAYER1  | SPC     |                           | SPC     |         | ALT     | RCTRL   | LEFT    | DOWN    | RIGHT   |
            bindings = <
                &kp C_PP   &kp ESC    &kp N1    &kp N2    &kp N3    &kp N4    &kp N5           &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp MINUS &kp EQUAL &kp BSPC
                           &kp TAB    &kp Q     &kp W     &kp E     &kp R     &kp T            &kp Y     &kp U     &kp I     &kp O     &kp P     &kp LBKT  &kp RBKT  &kp BSLH
                           &kp CAPS   &kp A     &kp S     &kp D     &kp F     &kp G            &kp H     &kp J     &kp K     &kp L     &kp SEMI  &kp APOS  &kp ENTER
                           &kp LSHFT  &kp Z     &kp X     &kp C     &kp V     &kp B            &kp B     &kp N     &kp M     &kp COMMA &kp DOT   &kp SLASH &kp UP    &kp RSHFT
                           &kp LCTRL  &kp LGUI  &kp LALT  &mo LYR1  &kp SPC                              &kp SPC             &kp RGUI  &mo LYR1  &kp LEFT  &kp DOWN  &kp RIGHT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
        mod_layer { // Layer 1 (LYR1)
            display-name = "Lower Layer";
            // ----------------------------------------------------------------------------------------------------------------------------------------------------
            //  |         | `       | F1      | F2      | F3      | F4      | F5      |       | F6      | F7      | F8      | F9      | F10     | F11     | F12     | DEL     |
            //            |         | BT0     | BT1     | BT2     | BT3     | BT4     |       |         |         |         |         |         |         |         |         |
            //            | RGB_HUI | RGB_HUD | RGB_SAI | RGB_SAD | RGB_BRI | RGB_BRD |       | EP_ON   | EP_OFF  |         |         |         |         |                   |
            //            |         | RGB_SPI | RGB_SPD | RGB_EFF | RGB_EFR | RGB_TOG |       |         |         |         |         |         |         |         |         |
            //            |         |         |         |         |         |                           |         |         |         |         |         |         |         |
            bindings = <
                &kp C_MUTE &kp GRAVE        &kp F1           &kp F2           &kp F3           &kp F4           &kp F5              &kp F6            &kp F7             &kp F8    &kp F9    &kp F10   &kp F11   &kp F12   &kp DEL
                           &trans           &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4        &trans            &trans             &trans    &trans    &trans    &trans    &trans    &trans
                           &rgb_ug RGB_HUI  &rgb_ug RGB_HUD  &rgb_ug RGB_SAI  &rgb_ug RGB_SAD  &rgb_ug RGB_BRI  &rgb_ug RGB_BRD     &ext_power EP_ON  &ext_power EP_OFF  &trans    &trans    &trans    &trans    &trans
                           &trans           &rgb_ug RGB_SPI  &rgb_ug RGB_SPD  &rgb_ug RGB_EFF  &rgb_ug RGB_EFR  &rgb_ug RGB_TOG     &trans            &trans             &trans    &trans    &trans    &trans    &trans    &trans
                           &trans           &trans           &trans           &trans           &trans                                                 &trans                       &trans    &trans    &trans    &trans    &trans
            >;

            sensor-bindings = <&msc SCRL_LEFT SCRL_RIGHT>;
        };
    };
 };